@if (Comments == null)
{
    <LoadingSpinner Enabled="true" />
}
else
{
    <ul class="list-group">
        @foreach (var comment in Comments)
        {
            <CommentItem Comment=comment />
        }
    </ul>
}


@code {
    [Parameter]
    public CommentDto[] Comments { get; set; }
    [Parameter]
    public EventCallback<CommentDto[]> CommentsChanged { get; set; }
}
